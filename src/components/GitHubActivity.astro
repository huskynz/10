      <h2 class="font-semibold">GitHub Activity</h2>
      <a href="https://github.com/HuskyNZ" target="_blank" class="text-sm text-black/75 dark:text-white/75 hover:text-black hover:dark:text-white transition-colors flex items-center gap-1">
        View Profile â†’
      </a>
    </div>

    <div class="relative w-full">
      <div id="contributionContainer" class="overflow-hidden">
        <div id="contributionsGrid" class="flex gap-[3px]">
          {contributionWeeks?.map((week) => (
            <div class="contribution-week flex flex-col gap-[3px]">
              {week.contributionDays.map((day) => (
                <div class="relative group">
                  <div class={`w-[10px] sm:w-[12px] lg:w-[14px] h-[10px] sm:h-[12px] lg:h-[14px] rounded-sm ${getContributionClass(day.contributionCount)}`}></div>
                </div>
              ))}
